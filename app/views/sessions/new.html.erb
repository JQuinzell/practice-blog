<div class="row">
  
  

  <%= form_tag sessions_path, class: "col-sm-3" do %>
    <h2 class="page-header">Sign in</h2>
    <div class="form-group">
      <%= label_tag :username %>
      <%= text_field_tag :username, nil, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= label_tag :password %>
      <%= password_field_tag :password, nil, class: "form-control" %>
    </div>

  <%= submit_tag "Sign in", class: "btn btn-default" %>

  <% end %>
</div>