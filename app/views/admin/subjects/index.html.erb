<table>
  <thead>
    <tr>
      <th>Subject Name</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>
	<% @subjects.each do |subject| %>
		<tr>
			<td><%= subject.name %></td>
			<td>
        <%= link_to "Rename", [:edit, :admin, subject] %>
      </td>
      <td>
        <%= link_to "Manage Articles", [:admin, subject] %>
      </td>
      <td>
        <%= link_to "Delete", [:admin, subject], confirm: "Are you sure?", method: :delete %>
			</td>
		</tr>
	<% end %>
</table>

<%= link_to "New subject", new_admin_subject_path %>