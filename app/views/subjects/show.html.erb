<ul class="list-group col-sm-4">
  <% @subject.articles.each do |article| %>
    <%= content_tag :div, class: "list-group-item", id: article.title.parameterize do %>
      <h4><%= link_to article.title, article %></h2>
      <p><%= article.summary %></p>
      <% if permit? "articles", "edit", article %>
        <%= link_to "Edit", edit_article_path(article) %>
      <% end %>
    <% end %>
  <% end %>
</ul>